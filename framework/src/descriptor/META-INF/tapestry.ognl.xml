<module id="tapestry.ognl" version="3.1.0">

  Wrappers around the Object Graph Navigation Library.
  
  <!-- Currently, a single TypeConverter is allowed, specified as an app extension.  Need to augment that with
       a configuration point to specify as many as necessary. -->

  <service-point id="ExpressionEvaluator" interface="org.apache.tapestry.services.ExpressionEvaluator">
    <invoke-factory>
      <construct class="org.apache.tapestry.services.impl.ExpressionEvaluatorImpl">
        <set-object property="applicationSpecification" value="infrastructure:applicationSpecification"/>
      </construct>
    </invoke-factory>
  </service-point>

  <service-point id="ExpressionCache" interface="org.apache.tapestry.services.ExpressionCache">
    <invoke-factory>
      <construct class="org.apache.tapestry.services.impl.ExpressionCacheImpl">
        <event-listener service-id="tapestry.ResetEventCoordinator"/>
      </construct>
    </invoke-factory>
  </service-point>
</module>