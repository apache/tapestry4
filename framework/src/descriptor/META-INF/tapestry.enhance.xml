<module id="tapestry.enhance" version="3.1.0">
  
  Services and configurations related to component and page class enhancement.
  
  <service-point id="ComponentClassEnhancer" interface="org.apache.tapestry.engine.IComponentClassEnhancer">
    
    Responsible for providing "enhanced" classes; classes that have had additional methods, fields, 
    constructors and interfaces added to support specified properties and component parameters.
     
    <invoke-factory>
      <construct class="org.apache.tapestry.enhance.DefaultComponentClassEnhancer">
        <set-object property="disableValidation" 
                       value="app-property:org.apache.tapestry.enhance.disable-abstract-method-validation"/>
        <set-service property="classFactory" service-id="hivemind.ClassFactory"/>
        <event-listener service-id="tapestry.ResetEventCoordinator"/>
      </construct>
    </invoke-factory>
    
  </service-point>
  
</module>