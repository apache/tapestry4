<mock-test>
    <context name="c7" root="context7"/>

  	<servlet name="lb" class="org.apache.tapestry.ApplicationServlet">
      <init-parameter name="org.apache.tapestry.servlet-path" value="/lb"/>
  	</servlet>
  	

	<request>
  	 	<parameter name="service" value="page"/>
      <parameter name="page" value="Two"/>
  	  	  	
		<assert-output name="Page Title">
<![CDATA[		
<title>Listener Binding</title>
]]>
		</assert-output>
  	  	  	
		<assert-output name="Initial Message">
Message: No message.
		</assert-output>
	
		<assert-output name="Link">
<![CDATA[		
/c7/lb?component=link&amp;page=Two&amp;service=direct
]]>
		</assert-output>
 
  	</request>
  
	<request>
		<parameter name="service" value="direct"/>
    <parameter name="page" value="Two"/>
    <parameter name="component" value="link"/>
  		
 		<assert-output name="Page Title">
<![CDATA[		
<title>Listener Binding</title>
]]>
		</assert-output>
  	  	  	
		<assert-output name="Updated Message">
Message: Component was clicked.
		</assert-output>
	</request> 		
  
	<request>
  	 	<parameter name="service" value="reset"/>
      <parameter name="page" value="Two"/>
  	  	  	
		<assert-output name="Page Title">
<![CDATA[		
<title>Listener Binding</title>
]]>
		</assert-output>
  	  	  	
		<assert-output name="Initial Message">
Message: No message.
		</assert-output>	
	</request>

	<request>
		<parameter name="service" value="direct"/>
    <parameter name="page" value="Two"/>
    <parameter name="component" value="link"/>
  		
 		<assert-output name="Page Title">
<![CDATA[		
<title>Listener Binding</title>
]]>
		</assert-output>
  	  	  	
		<assert-output name="Updated Message">
Message: Component was clicked.
		</assert-output>
		
		<assert-output name="invalidScriptLink URL">
<![CDATA[
/c7/lb?component=invalidScriptLink&amp;page=Two&amp;service=direct
]]>
		</assert-output>
		
		<assert-output name="unknownLanguageLink URL">
<![CDATA[
/c7/lb?component=unknownLanguageLink&amp;page=Two&amp;service=direct
]]>
		</assert-output>	
				
	</request> 		
	  
	<!--  Trigger a case where the script to execute is invalid. -->
	
	<request>
		<parameter name="service" value="direct"/>
    <parameter name="page" value="Two"/>
    <parameter name="component" value="invalidScriptLink"/>
	
 		<assert-output name="Page Title">
<![CDATA[		
<title>Exception</title>
]]>
		</assert-output>
		
		<assert-output name="Invalid Script Error Message part 1">
		Unable to execute listener script "context:/WEB-INF/Two.page, line 32
		</assert-output>		

		<assert-output name="Invalid Script Error Message part 2">
		exception from Jython
		</assert-output>		
	</request>

	<!-- Trigger a case where the script language is not defined. -->

	<request>
		<parameter name="service" value="direct"/>
    <parameter name="page" value="Two"/>
    <parameter name="component" value="unknownLanguageLink"/>
	
 		<assert-output name="Page Title">
<![CDATA[		
<title>Exception</title>
]]>
		</assert-output>
		
		<assert-output name="Unknown Language Error Message part 1">
			Unable to execute listener script "context:/WEB-INF/Two.page, line 42
		</assert-output>		

		<assert-output name="Unknown Language Error Message part 2">
			unsupported language: DoesNotExist
		</assert-output>		
	</request>
			  
 </mock-test>