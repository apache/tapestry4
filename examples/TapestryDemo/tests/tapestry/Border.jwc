<?xml version="1.0"?>
<!DOCTYPE specification PUBLIC 
	"-//Primix Solutions//Tapestry Specification 1.0//EN"
	"http://tapestry.primix.com/dtd/Tapestry_1_0.dtd">
<!-- $Id$ -->

<specification>
	<class>com.primix.tapestry.BaseComponent</class>
		
	<parameters>
		<allow-informal-parameters>no</allow-informal-parameters>
		
		<parameter>
			<name>title</name>
			<java-type>java.lang.String</java-type>
			<required>yes</required>
		</parameter>	

		<parameter>
			<name>hideNavigation</name>
		</parameter>
	</parameters>
	
	<components>
		<component>
			<id>body</id>
			<type>Body</type>
		</component>
			
		<component>
			<id>insertApplicationName</id>
			<type>Insert</type>
			
			<bindings>
				<binding>
					<name>value</name>
					<property-path>page.application.specification.name</property-path>
				</binding>
			</bindings>
		</component>
		
		<component>
			<id>insertPageTitle</id>
			<type>Insert</type>
			
			<bindings>
				<inherited-binding>
					<name>value</name>
					<parameter-name>title</parameter-name>
				</inherited-binding>
			</bindings>
		</component>
		
		<component>
			<id>ifShowNavigation</id>
			<type>Conditional</type>
			
			<bindings>
				<inherited-binding>
					<name>condition</name>
					<parameter-name>hideNavigation</parameter-name>
				</inherited-binding>
				
				<static-binding>
					<name>invert</name>
					<value>true</value>
				</static-binding>
			</bindings>
		</component>
		
		<component>
			<id>navBar</id>
			<type>/tests/tapestry/NavBar.jwc</type>
		</component>
				
		<component>
			<id>wrapped</id>
			<type>InsertWrapped</type>
		</component>
				
		<component>
			<id>inspector</id>
			<type>/tests/tapestry/Inspector.jwc</type>
		</component>
	</components>
	
</specification>

