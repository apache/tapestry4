<?xml version="1.0"?>
<!DOCTYPE specification PUBLIC 
	"-//Primix Solutions//Tapestry Specification 1.0//EN"
	"http://tapestry.primix.com/dtd/Tapestry_1_0.dtd">
<!-- $Id$ -->

<specification>
	<class>com.primix.tapestry.BasePage</class>
	
	<components>
		<component>
			<id>border</id>
			<type>Border</type>
			
			<bindings>
				<static-binding>
					<name>title</name>
					<value>Credits</value>
				</static-binding>
			</bindings>
		</component>
		
		<component>
			<id>builtWithTapestry</id>
			<type>Image</type>
			
			<bindings>
				<binding>
					<name>image</name>
					<property-path>assets.builtWithTapestry</property-path>
				</binding>
			</bindings>
		</component>
			
		<component>
			<id>homeLink</id>
			<type>Service</type>
			
			<bindings>
				<static-binding>
					<name>service</name>
					<value>home</value>
				</static-binding>
			</bindings>
		</component>
		
		<component>
			<id>homeButton</id>
			<type>Rollover</type>
			
			<bindings>
				<binding>
					<name>image</name>
					<property-path>assets.home</property-path>
				</binding>
				
				<binding>
					<name>focus</name>
					<property-path>assets.homeH</property-path>
				</binding>
				
				<binding>
					<name>blur</name>
					<property-path>assets.homeB</property-path>
				</binding>

				<static-binding>
					<name>alt</name>
					<value>Time for new glasses?</value>
				</static-binding>
			</bindings>
			
		</component>
	</components>
	
	<assets>	
		<private-asset>
			<name>builtWithTapestry</name>
			<resource-path>/tests/tapestry/BuiltWithTapestry.gif</resource-path>
		</private-asset>
		
		<private-asset>
			<name>home</name>
			<resource-path>/tests/tapestry/Home.gif</resource-path>
		</private-asset>
		
		<private-asset>
			<name>homeH</name>
			<resource-path>/tests/tapestry/HomeH.gif</resource-path>
		</private-asset>
		
		<private-asset>
			<name>homeB</name>
			<resource-path>/tests/tapestry/HomeB.gif</resource-path>
		</private-asset>
	</assets>
	
</specification>