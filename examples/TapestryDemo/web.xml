<!DOCTYPE web-app PUBLIC 
 "-//Sun Microsystems, Inc.//DTD Web Application 1.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<!-- $Id$ -->

<web-app>

  <display-name>Tapestry Demo Application</display-name>

 
  <servlet>
    <servlet-name>tapestry-demo</servlet-name>
 
 	<display-name>Tapestry Demo Servlet</display-name>
    <description>Tapestry application servlet for the Tapestry Demo application.</description>
    
    <servlet-class>tests.tapestry.Demo</servlet-class>

    <init-param>
      <param-name>com.primix.tapestry.trace-logger-events</param-name>
      <param-value></param-value>
    </init-param>

    <init-param>
      <param-name>com.primix.tapestry.context-path</param-name>
      <param-value>/tapdemo</param-value>

      <description>Context path, prepended to the servlet path.  This is
the same as the value returned by HttpServletRequest.getContextPath()
in the Java Servlet API 2.2 ... but Tapestry uses the 2.1 API.
      </description>
    </init-param>

 </servlet>

  <servlet-mapping>
    <servlet-name>tapestry-demo</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>
  
  	<ejb-ref>
    	<description>Session bean that tracks server hits.</description>
        <ejb-ref-name>ejb/SessionTracker</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.primix.sesstrack.ISessionTrackerHome</home>
        <remote>com.primix.sesstrack.ISessionTracker</remote>
    </ejb-ref>
    
</web-app>
